<Window x:Class="CheckBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBoxDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <StackPanel>
        <Label FontWeight="Bold"
               >Toppings</Label>
        <CheckBox x:Name="cbParent" IsThreeState="True" Checked="cbParentCheckedChanged" Unchecked="cbParentCheckedChanged"></CheckBox>
        <CheckBox Margin="15,5" VerticalContentAlignment="Center"
                  x:Name="cbCheese"
                  >
            <WrapPanel>
                <Image Width="50" Source="https://i.imgur.com/2Gmv5.jpg" />
                <Label Name="lbCheese">Extra Cheese</Label>
            </WrapPanel>
        </CheckBox>
        <CheckBox x:Name="cbTuna" Margin="15,5"
                    Checked="cbToppingsCheckChanged"
                    Unchecked="cbToppingsCheckChanged"
                  >Tuna</CheckBox>
        <CheckBox x:Name="cbHam" Margin="15,5"
                    Checked="cbToppingsCheckChanged"
                    Unchecked="cbToppingsCheckChanged"
                  >Ham</CheckBox>
        <CheckBox x:Name="cbPepperoni" Margin="15,5"
                    Checked="cbToppingsCheckChanged"
                    Unchecked="cbToppingsCheckChanged"
                  >Pepperoni</CheckBox>
    </StackPanel>
</Window>
