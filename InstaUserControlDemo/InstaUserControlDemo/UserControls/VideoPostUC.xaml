<UserControl x:Class="InstaUserControlDemo.UserControls.VideoPostUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InstaUserControlDemo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <ContentControl MouseDoubleClick="ContentControl_MouseDoubleClick">
            <MediaElement x:Name="VideoPlayer" Stretch="UniformToFill"/>
        </ContentControl>
        <local:PostOperationsUC x:Name="PostOps" Height="40"></local:PostOperationsUC>
        <local:PostLikedByUC></local:PostLikedByUC>
    </StackPanel>
</UserControl>
