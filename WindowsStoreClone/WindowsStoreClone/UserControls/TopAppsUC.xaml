<UserControl x:Class="WindowsStoreClone.UserControls.TopAppsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsStoreClone.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.33*"></RowDefinition>
            <RowDefinition Height="0.33*"></RowDefinition>
            <RowDefinition Height="0.33*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image
            Grid.Row="0"
            Grid.Column="0"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/TopAppIcons/81-tropical.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />
        <Image
            Name="TopImage"
            Grid.Row="0"
            Grid.Column="3"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/TopAppIcons/82-circus fun.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />
        <Image
            Name="MiddleImage"
            Grid.Row="1"
            Grid.Column="3"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/TopAppIcons/83-Race extreme.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />
        <Image
            Name="BottomImage"
            Grid.Row="2"
            Grid.Column="3"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/TopAppIcons/84-chat message.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />

        <Grid
            Name="BottomGrid"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"></RowDefinition>
                <RowDefinition Height="0.5*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button
                x:Name="TopAppsButton"
                FontSize="18"
                Grid.Row="0"
                Grid.Column="0"
                Margin="2,2,2,2"
                Click="TopAppsButton_Click">Top Apps</Button>
            <Button
                x:Name="FeaturedButton"
                FontSize="18"
                Grid.Row="0"
                Grid.Column="1"
                Margin="2,2,2,2">Featured</Button>
            <Button
                x:Name="TTopGamesButton"
                FontSize="18"
                Grid.Row="1"
                Grid.Column="0"
                Margin="2,2,2,2">Top Games</Button>
            <Button
                x:Name="CollectionsButton"
                FontSize="18"
                Grid.Row="1"
                Grid.Column="1"
                Margin="2,2,2,2">Collections</Button>
        </Grid>

        <Image
            Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="/Images/TopAppIcons/85-night castle.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />

        <Canvas
            Grid.Column="0" Grid.Row="0"
            Grid.ColumnSpan="4"
            Grid.RowSpan="3"
            Opacity="0.4"
            Background="#2e2e2e"
            IsHitTestVisible="False">
            
        </Canvas>
        <Label Name="AppNameLabelTop"
               Grid.Column="0" Grid.Row="0"
               Grid.ColumnSpan="3"
               Grid.RowSpan="2"
               FontSize="25"
               FontWeight="DemiBold"
               Foreground="White"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center">
            Tropical
        </Label>
        <Label Name="AppNameLabelRightTop"
           Grid.Column="3" Grid.Row="0"
           FontSize="25"
           FontWeight="DemiBold"
           Foreground="White"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center">
            Circus Fun
        </Label>

        <Label Name="AppNameLabelRightMiddle"
           Grid.Column="3" Grid.Row="1"
           FontSize="25"
           FontWeight="DemiBold"
           Foreground="White"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center">
            Race Extreme
        </Label>

        <Label Name="AppNameLabelBottomLeft"
           Grid.Column="2" Grid.Row="2"
           FontSize="25"
           FontWeight="DemiBold"
           Foreground="White"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center">
            Night Castle
        </Label>

        <Label Name="AppNameLabelBottomRight"
           Grid.Column="3" Grid.Row="2"
           FontSize="25"
           FontWeight="DemiBold"
           Foreground="White"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center">
            Chat Message
        </Label>

    </Grid>
</UserControl>
