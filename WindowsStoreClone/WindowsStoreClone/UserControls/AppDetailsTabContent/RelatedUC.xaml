<UserControl x:Class="WindowsStoreClone.UserControls.AppDetailsTabContent.RelatedUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsStoreClone.UserControls.AppDetailsTabContent"
             xmlns:uc="clr-namespace:WindowsStoreClone.UserControls"
             mc:Ignorable="d" 
             Name="RelatedUserControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel
        Orientation="Vertical"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        Visibility="Visible"
        Background="#2e2e2e"
        Width="{Binding ElementName=RelatedUserControl, Path=ActualWidth}">
        <Label
                FontSize="25"
                Foreground="White"
                Margin="0,0,0,30">
            People Also Like
        </Label>
        <uc:AppsViewerUC x:Name="AppsViewer1"></uc:AppsViewerUC>

        <Label
            FontSize="25"
            Foreground="White"
            Margin="0,40,0,30">
            Top Free Games
        </Label>
        <uc:AppsViewerUC x:Name="AppsViewer2"></uc:AppsViewerUC>

        <Label
            FontSize="25"
            Foreground="White"
            Margin="0,40,0,30">
            Top Paid Games
        </Label>
        <uc:AppsViewerUC x:Name="AppsViewer3"></uc:AppsViewerUC>

        <Label
            FontSize="25"
            Foreground="White"
            Margin="0,40,0,30">
            Best Rates Games
        </Label>
        <uc:AppsViewerUC x:Name="AppsViewer4"></uc:AppsViewerUC>
        <Label
            FontSize="25"
            Foreground="White"
            Margin="0,40,0,30">
            Best Selling Games
        </Label>
        <uc:AppsViewerUC x:Name="AppsViewer5"></uc:AppsViewerUC>
    </StackPanel>
</UserControl>
