<UserControl x:Class="WindowsStoreClone.UserControls.HamburgerMenuViews.AllOwnedUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsStoreClone.UserControls.HamburgerMenuViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="MainScrollViewer"
                  HorizontalScrollBarVisibility="Hidden">
        <StackPanel>
            <local:HamburgerMenuHeaderUC x:Name="HamHeader"></local:HamburgerMenuHeaderUC>
            <local:HamburgerMenuAppListUC x:Name="HamAppsList"></local:HamburgerMenuAppListUC>
        </StackPanel>
    </ScrollViewer>
</UserControl>
