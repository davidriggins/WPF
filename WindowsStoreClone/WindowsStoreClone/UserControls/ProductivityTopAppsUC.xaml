<UserControl x:Class="WindowsStoreClone.UserControls.ProductivityTopAppsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsStoreClone.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftMostColumn" Width="0.25*"/>
            <ColumnDefinition x:Name="LeftColumn" Width="0.25*"/>
            <ColumnDefinition x:Name="RightColumn" Width="0.25*"/>
            <ColumnDefinition x:Name="RightMostColumn" Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.33*"></RowDefinition>
            <RowDefinition Height="0.33*"></RowDefinition>
            <RowDefinition Height="0.33*"></RowDefinition>
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.RowSpan="2"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/ProductivityAppIcons/Photoshop.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />
        <Image
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/ProductivityAppIcons/ACDSee.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />

        <Image
            Grid.Row="2"
            Grid.Column="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/ProductivityAppIcons/DrawboardPDF.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />
        <Image
            x:Name="RightLargeImage"
            Grid.Row="0"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Grid.RowSpan="2"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/ProductivityAppIcons/HotspotShield.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />
        <Image
            Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/ProductivityAppIcons/PicsArt.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />
        <Image
            x:Name="BottomRightImage"
            Grid.Row="2"
            Grid.Column="3"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="pack://application:,,,/Images/ProductivityAppIcons/YourPhone.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"
            />
        <Canvas
            Grid.Column="0" Grid.Row="0"
            Grid.ColumnSpan="4"
            Grid.RowSpan="3"
            Opacity="0.4"
            Background="#2e2e2e"
            IsHitTestVisible="False"></Canvas>

        <Label Name="AppNameLabelTop1"
               Grid.Column="0" Grid.Row="0"
               Grid.ColumnSpan="2"
               Grid.RowSpan="2"
               FontSize="25"
               FontWeight="DemiBold"
               Foreground="White"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center">
            Photoshop
        </Label>

        <Label Name="AppNameLabelBottom1"
           Grid.Column="0" Grid.Row="2"
           FontSize="25"
           FontWeight="DemiBold"
           Foreground="White"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center">
            Snack
        </Label>

        <Label Name="AppNameLabelBottom2"
           Grid.Column="1" Grid.Row="2"
           FontSize="25"
           FontWeight="DemiBold"
           Foreground="White"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center">
            Watch
        </Label>

        <Label Name="AppNameLabelTop2"
           Grid.Column="2" Grid.Row="0"
           Grid.RowSpan="2"
           Grid.ColumnSpan="2"
           FontSize="25"
           FontWeight="DemiBold"
           Foreground="White"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center">
            Finance
        </Label>

        <Label Name="AppNameLabelBottom3"
           Grid.Column="2" Grid.Row="2"
           FontSize="25"
           FontWeight="DemiBold"
           Foreground="White"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center">
            Slick Draw
        </Label>

        <Label Name="AppNameLabelBottom4"
           Grid.Column="3" Grid.Row="2"
           FontSize="25"
           FontWeight="DemiBold"
           Foreground="White"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center">
            Phone
        </Label>
    </Grid>
</UserControl>
