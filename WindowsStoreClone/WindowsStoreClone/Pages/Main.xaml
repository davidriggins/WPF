<Page x:Class="WindowsStoreClone.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsStoreClone.Pages"
      xmlns:uc="clr-namespace:WindowsStoreClone.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid
        Name="MainWindowMainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"></ColumnDefinition>
            <ColumnDefinition Width="0.60*"></ColumnDefinition>
            <ColumnDefinition Width="0.40*"></ColumnDefinition>
            <ColumnDefinition Width="35"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TabControl
            Name="MainTabControl"
            Visibility="Visible"
            Grid.Row="0"
            Grid.Column="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            ClipToBounds="True"
        >
            <TabItem
                Header="Home"
                Name="HomeTab"
            >
                <ScrollViewer
                    Name="MainScrollViewer"
                    Margin="10"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Hidden"
                    Loaded="MainScrollViewer_Loaded"
                >

                    <!--<ScrollViewer.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        From="0"
                                        To="1"
                                        Duration="0:0:1"
                                        Storyboard.TargetProperty="Opacity" 
                                    />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ScrollViewer.Triggers>-->
                    
                    <StackPanel
                        Name="MainHomeStackPanel"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Visibility="Visible"
                        Width="{Binding ElementName=MainScrollViewer, Path=ActualWidth}"
                    >
                        <uc:TopAppsUC
                            x:Name="TopApps"
                            HorizontalAlignment="Left"
                            Width="{Binding ElementName=MainTabControl, Path=ActualWidth}"
                            Margin="2"
                        />

                        <Label
                            HorizontalAlignment="Left"
                            Margin="10,10,10,10"
                            Content="Featured Apps"
                            FontSize="40" />
                        <uc:AppsViewerUC
                            x:Name="FeaturesAppViewer"
                            Width="{Binding ElementName=MainScrollViewer, Path=ActualWidth}"
                            HorizontalAlignment="Left"
                            Margin="2" 
                        />

                        <Label
                            HorizontalAlignment="Left"
                            Margin="10,10,10,10"
                            Content="Most Popular"
                            FontSize="40" />
                        <uc:AppsViewerUC
                            x:Name="MostPopularAppViewer"
                            Width="{Binding ElementName=MainScrollViewer, Path=ActualWidth}"
                            HorizontalAlignment="Left"
                            Margin="2" 
                        />

                        <Label
                            HorizontalAlignment="Left"
                            Margin="10,10,10,10"
                            Content="Top Free Apps"
                            FontSize="40" />
                        <uc:AppsViewerUC
                            x:Name="TopFreeAppViewer"
                            Width="{Binding ElementName=MainScrollViewer, Path=ActualWidth}"
                            HorizontalAlignment="Left"
                            Margin="2" 
                        />

                        <Label
                            HorizontalAlignment="Left"
                            Margin="10,10,10,10"
                            Content="Top Free Games"
                            FontSize="40" />
                        <uc:AppsViewerUC
                            x:Name="TopFreeGamesAppViewer"
                            Width="{Binding ElementName=MainScrollViewer, Path=ActualWidth}"
                            HorizontalAlignment="Left"
                            Margin="2" 
                        />

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem
                Header="Gaming">
                <StackPanel>
                    <Label
                        HorizontalAlignment="Left"
                        Margin="10,10,10,10"
                        Content="Top Free Games"
                        FontSize="40">
                    </Label>
                    <uc:AppsViewerUC
                        x:Name="GamingAppsViewer"
                        Width="{Binding ElementName=MainTabControl, Path=ActualWidth}"
                        HorizontalAlignment="Left"
                        ></uc:AppsViewerUC>
                    
                </StackPanel>
            </TabItem>

            <TabItem
                Header="Entertainment">
                <StackPanel>
                    <Label
                        HorizontalAlignment="Left"
                        Margin="10,10,10,10"
                        Content="Top Free Apps"
                        FontSize="40">  
                    </Label>
                    <uc:AppsViewerUC
                        x:Name="EntertainmentAppsViewer"
                        Width="{Binding ElementName=MainTabControl, Path=ActualWidth}"
                        HorizontalAlignment="Left"
                    ></uc:AppsViewerUC>

                </StackPanel>
            </TabItem>

            <TabItem
                Header="Productivity">
                <ScrollViewer
                    x:Name="MainProductivitySV"
                    Margin="10"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Hidden">
                    <StackPanel
                        x:Name="MainProductivitySP"
                        Width="{Binding ElementName=MainProductivitySV, Path=ActualWidth}">
                        <uc:ProductivityTopAppsUC
                            x:Name="ProductivityTopApps"
                            Width="{Binding ElementName=MainProductivitySP, Path=ActualWidth}">
                        </uc:ProductivityTopAppsUC>
                        <Label
                            HorizontalAlignment="Left"
                            Margin="10,10,10,10"
                            Content="App Specials"
                            FontSize="40">
                        </Label>
                        <uc:AppsViewerUC
                            x:Name="ProductivityAppsL1"
                            Width="{Binding ElementName=MainProductivitySP, Path=ActualWidth}"
                            HorizontalAlignment="Left">
                        </uc:AppsViewerUC>
                        <Label
                            HorizontalAlignment="Left"
                            Margin="10,10,10,10"
                            Content="Best Selling Apps"
                            FontSize="40">
                        </Label>
                        <uc:AppsViewerUC
                            x:Name="ProductivityAppsL2"
                            Width="{Binding ElementName=MainProductivitySP, Path=ActualWidth}"
                            HorizontalAlignment="Left">
                        </uc:AppsViewerUC>
                        <Label
                            HorizontalAlignment="Left"
                            Margin="10,10,10,10"
                            Content="Favorite Apps"
                            FontSize="40">
                        </Label>
                        <uc:AppsViewerUC
                            x:Name="ProductivityAppsL3"
                            Width="{Binding ElementName=MainProductivitySP, Path=ActualWidth}"
                            HorizontalAlignment="Left">
                        </uc:AppsViewerUC>
                    </StackPanel>
                </ScrollViewer>
                
            </TabItem>

            <TabItem
                Header="Deals">
                <StackPanel>
                    <Label
                        HorizontalAlignment="Left"
                        Margin="10,10,10,10"
                        Content="App Specials"
                        FontSize="40">
                    </Label>
                    <uc:AppsViewerUC
                        x:Name="DealsAppsViewer"
                        Width="{Binding ElementName=MainTabControl, Path=ActualWidth}"
                        HorizontalAlignment="Left"
                    ></uc:AppsViewerUC>

                </StackPanel>
            </TabItem>
        </TabControl>

        <uc:HeaderRightButtonsUC
            x:Name="RightHeaderButtons"
            Grid.Row="0"
            Grid.Column="2"></uc:HeaderRightButtonsUC>
    </Grid>
</Page>
