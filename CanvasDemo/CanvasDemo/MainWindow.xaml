<Window x:Class="CanvasDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Canvas
        Opacity="0.5"
        >
        <Button Canvas.Left="5">Top Left</Button>
        <Button Canvas.Right="5">Top Right</Button>
        <Rectangle Panel.ZIndex="1" Width="100" Height="100" Fill="Aqua" Canvas.Bottom="0" Canvas.Right="0"></Rectangle>
        <Rectangle Panel.ZIndex="0" Width="100" Height="100" Fill="Blue" Canvas.Bottom="50" Canvas.Right="50"></Rectangle>
    </Canvas>
</Window>
